{% extends 'HellspiteMainBundle:Default:index.html.twig' %}

{% block title %}
    {{ parent() }} - Contacts
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" type="text/css" href="{{
    asset('bundles/hellspitecontact/css/contact.css') }}" />
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/jquery-1.7.2.min.js')}}"></script>

    <script type="text/javascript">
        $(document).ready(function() {  
            // Add the class 'button' just like in CSS with a dot in front of it  
            $('.social-icon-small, .social-icon').append('<span class="hover"></span>').each(function () {  
                var $span = $('> span.hover', this).css('opacity', 0);  
                $(this).hover(function () {  
                    $span.stop().fadeTo(1500, 1); //Change the number 500 to change the speed of the Fade In  
                }, function () {  
            $span.stop().fadeTo(500, 0); //Change the number 500 to change the speed of the Fade Out  
                });  
            });  
        });  
    </script>
{% endblock %}

{% block main %}
    <div class="left box">    
        <div class="boxhead">Contacts</div>
        {% block contacts %}{% endblock %}
    </div>

    <div class="right">
        <div class="rightbox">
            <div class="boxhead">Social</div>
                <a class="social-icon-small facebook-btn" href="http://www.facebook.com/hellspiterm" target="_blank"></a>
                <a class="social-icon-small twitter-btn" href="http://www.twitter.com/HellspiteRM" target="_blank"></a>
                <a class="social-icon soundcloud" href="http://soundcloud.com/hellspite" target="_blank"></a>
        </div>
    </div>
{% endblock %}

