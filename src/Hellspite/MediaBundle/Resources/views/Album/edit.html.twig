{% extends '::admin.html.twig' %}

{% block css %}
    {{ parent() }}

    <link type="text/css" href="{{ asset('css/smoothness/jquery-ui-1.8.21.custom.css') }}" rel="stylesheet" />

{% endblock %}

{% block script %}
    {{ parent() }}

    <script type="text/javascript" src="{{ asset('js/ui/i18n/jquery.ui.datepicker-it.js') }}"></script>

    <script type="text/javascript">
            // prepara un collegamento "aggiungere un tag"
            var $addTagLink = $('<a href="#" class="add_photo_link">Add Photo</a>');
            var $newLinkLi = $('<li></li>').append($addTagLink);
        $(document).ready(function() {

            var collectionHolder = $('.admin-photos');

            $('#album_date').datepicker();

            // aggiunge l'ancora "aggiungere un tag" e il li all'ul dei tag
            collectionHolder.append($newLinkLi);

            $addTagLink.on('click', function(e) {
                // previene il "#" nell'URL
                e.preventDefault();

                // aggiunge un nuovo form tag (vedere il prossimo blocco di codice)
                addPhotoForm();
            });
        });

        function addPhotoForm() {
            var collectionHolder = $('.admin-photos');

            // Prendere data-prototype, come spiegato in precedenze
            var prototype = collectionHolder.attr('data-prototype');

            // Sostituire '$$name$$' nel prototipo, per essere invece un
            // numero, basato sulla lunghezza attuale dell'elenco.
            var newForm = prototype.replace(/\$\$name\$\$/g, collectionHolder.children().length);

            // Mostrare il form nella pagina, dentro un li, prima del collegamento "Aggiungere un tag"
            var $newFormLi = $('<li></li>').append(newForm);
            $newLinkLi.before($newFormLi);
        }
    </script>
{% endblock %}

{% block content %}
    <h1>Edit "{{ entity.title }}"</h1>
    <div class="test"></div>

    <form action="{{ path('admin_album_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} novalidate>
        <table>
            <tr class="odd">
                <td>{{ form_label(edit_form.date) }}</td>
                <td>
                    {{ form_errors(edit_form.date) }}
                    {{ form_widget(edit_form.date) }}
                </td>
            </tr>
            <tr class="even">
                <td>{{ form_label(edit_form.title) }}</td>
                <td>
                    {{ form_errors(edit_form.title) }}
                    {{ form_widget(edit_form.title) }}
                </td>
            </tr>
            <tr class="odd">
                <td>{{ form_label(edit_form.subtitle) }}</td>
                <td>
                    {{ form_errors(edit_form.subtitle) }}
                    {{ form_widget(edit_form.subtitle) }}
                </td>
            </tr>
            <tr class="even">
                <td>Photos</td>
                <td>
                    <ul class="admin-photos" data-prototype="{{
                    form_widget(edit_form.photos.get('prototype')) | e }}">
                        {% for k, photo in edit_form.photos %}
                            <li>
                                {% if entity.photos[k].image != '' %}
                                    <div class="announce-icon">
                                        <img src="{{ asset(['uploads/photo/thumb/',
                                        entity.photos[k].image] | join) }}" /><br/>
                                        <button>Delete Image</button><br/><br/>
                                    </div>
                                {% endif %}
                                {{ form_row(photo.file) }}
                                {{ form_row(photo.caption) }}
                            </li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>

            <tr class="odd">
                <td colspan="2">
                    <button type="submit">Edit</button>
                </td>
            </tr>
        </table>
    </form>

    <ul class="record_actions">
        <li>
            <a href="{{ path('admin_album') }}">
                Back to the list
            </a>
        </li>
        <li>
            <form action="{{ path('admin_album_delete', { 'id': entity.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit">Delete</button>
            </form>
        </li>
    </ul>
{% endblock %}
