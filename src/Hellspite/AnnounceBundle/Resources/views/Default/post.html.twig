<div class="post">
    <div class="post-head">
        <div class="post-title">
            {{ post.title|title }}
        </div>
        <div class="post-date">
            {{ post.date|date('d/m/Y') }}
        </div>
    </div>
    <div style="clear:both"></div>
    <div class="post-content">
        {% if post.icon != '' %}
            <img src="{{ asset(['uploads/announce/thumb/', post.icon] | join) }}" />
        {% endif %}
        {{ post.text|raw }}
        {% if show != true %}
            <div class="permalink">
                <a href="{{ path('HellspiteAnnounceBundle_show', {slug: post.slug})
                }}">permalink</a>
            </div>
        {% endif %}
    </div>
</div>

