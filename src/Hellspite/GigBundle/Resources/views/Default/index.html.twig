{% extends 'HellspiteGigBundle::layout.html.twig' %}

{% block gigs %}
    <div class="gig-section">
        Next Gigs
    </div>
    {% if gigs|length == 0 %}
        <div class="post-content">
            NO GIGS PLANNED FOR NOW
        </div>
    {% else %}
        {% for gig in gigs %}
            {% include 'HellspiteGigBundle:Default:gig.html.twig' with {'gig': gig } %}    
        {% endfor %}
    {% endif %}

    <div class="gig-section">
        Past Gigs
    </div>
    {% for past in pasts %}
        {% include 'HellspiteGigBundle:Default:gig.html.twig' with {'gig': past } %}    
    {% endfor %}
{% endblock %}
